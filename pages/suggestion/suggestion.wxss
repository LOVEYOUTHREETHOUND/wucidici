.p{
    width: 100%;
    height: 100%;
    justify-content: center;
}

.grid{
    border-top: #D9D9D9 1rpx solid;
    border-left: 1rpx solid #D9D9D9;
  }
  
.itemgrid{
  position: relative;
  float: left;
  padding: 40rpx 20rpx;
  width: 33.3333333333%; 
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  border-radius: 20%;
  
}

.itemgrid_active{
  
  background-color: #b0cf7d
}

.itemgrid_icon{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.itemgrid_label{
  margin-top: 10rpx;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

